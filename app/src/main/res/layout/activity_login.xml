<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    tools:context="com.example.destroyer.aplikasi_katalog_perpustakaan_smk_pgri_3.LoginActivity"
    android:background="#319db5">

    <ImageView
    android:src="@drawable/user"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scaleType="fitCenter"
    android:id="@+id/imageView"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="1dp"
    android:layout_above="@+id/vertical"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/vertical"
        android:baselineAligned="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_top_bg"
        android:padding="3dp"
        android:alpha="0.7"
        android:hint="Email"
        android:fontFamily="monochrome"
        android:textColorHint="#555555"
        android:inputType="textEmailAddress"
            android:textColor="@color/colorAccent"
            android:drawableLeft="@drawable/id"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:layout_marginTop="-2dp"
            android:fontFamily="monochrome"
            android:padding="3dp"
            android:alpha="0.7"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#555555"
            android:textColor="@color/colorAccent"
            android:drawableLeft="@drawable/password"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:shape="rectangle"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_margin="9dp"
            android:text="Login"
            android:alpha="0.7"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_default_bg"
            android:shadowColor="#929191"/>


            <!--<android.support.v7.widget.AppCompatButton-->
