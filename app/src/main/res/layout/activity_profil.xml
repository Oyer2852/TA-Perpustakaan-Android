<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureWithLargestChild="false"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <EditText
            android:id="@+id/editTextnoinduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:padding="20dp"
            android:alpha="0.7"
            android:hint="Nama"
            android:fontFamily="monochrome"
            android:textColorHint="#555555"
            android:inputType="textPersonName"
            android:textColor="@color/white"
           />
        <EditText
            android:id="@+id/editTextnoinduk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:padding="20dp"
            android:alpha="0.7"
            android:hint="Password"
            android:fontFamily="monochrome"
            android:textColorHint="#555555"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/imgbuku"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="0.21" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonbatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:alpha="0.7"
            android:background="@drawable/button_default_bg"
            android:padding="3dp"
            android:shadowColor="#FFFFFF"
            android:shape="rectangle"
            android:text="Cari Gambar"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonbatal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:alpha="0.7"
            android:background="@drawable/button_default_bg"
            android:padding="3dp"
            android:shadowColor="#929191"
            android:shape="rectangle"
            android:text="Ubah Profil"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />
</android.support.v4.widget.DrawerLayout>